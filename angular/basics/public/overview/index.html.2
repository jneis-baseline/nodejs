<!DOCTYPE html>
<html>
<head>
	<title>Angular Basics</title>
	<link rel="stylesheet" href="../lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>

	<div ng-app="invoice" ng-controller="InvoiceController as invoice">
		<b>Invoice:</b>

		<div>
			Quantity: <input type="number" min="0" ng-model="invoice.qty">
		</div>
		
		<div>
			Cost: <input type="number" min="0" ng-model="invoice.cost">

			<select ng-model="invoice.from">
				<option ng-repeat="c in invoice.currencies">{{c}}</option>
			</select>
		</div>
		
		<div>
			<b>Total:</b>
			<span ng-repeat="c in invoice.currencies">
				{{invoice.total(c) | currency:c}}
			</span>			
		</div>

		<div>
			<button class="btn" ng-click="invoice.pay()">Pay</button>
		</div>
	</div>

	<script src="../lib/jquery/dist/jquery.min.js"></script>
    <script src="../lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="../lib/angular/angular.min.js"></script>

	<script src="js/invoice.js"></script>
</body>
</html>